name: productpage
image:
     registry: registry.hub.docker.com
     name: inagachandra/bookinfo-productpage
     tag: 1.16.2
     buildSpec:
       stackImage: docker.io/istio/examples-bookinfo-productpage-v1:1.16.2

ports:
  - port: 9080/http

loadBalancer:
     provider: nginx
     host: bookinfo3.com
     sticky: true
     tlsSecret: bookinfo-tls-secret
     mapping:
        - port : 9080/http
        - contextPaths:
               - "/productpage"
               - "/login"
     headers:
         hello : there
         test : sample
